{
  "name": "@composable-router/core",
  "version": "0.1.0",
  "description": "Composable Router Core SDK",
  "keywords": [
    "composable-router"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dinngodev/router-sdk.git",
    "directory": "packages/common"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "format": "yarn sort-package-json",
    "lint": "eslint --fix src",
    "prepublishOnly": "yarn build",
    "test": "mocha",
    "test:e2e": "hardhat test",
    "test:unit": "mocha --recursive src",
    "typechain": "rm -rf src/contracts && typechain --target ethers-v5 --out-dir src/contracts src/abis/*.json && pretty-quick"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@composable-router/common": "*",
    "@composable-router/test-helpers": "*"
  }
}
